<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">faq_question_form.magebit_faq_item_form_data_source</item>
            <item name="deps" xsi:type="string">faq_question_form.magebit_faq_item_form_data_source</item>
        </item>

        <item name="label" xsi:type="string" translate="true">Edit FAQ Item</item>

        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">faq_question_form</item>
        </item>

        <item name="template" xsi:type="string">templates/form/collapsible</item>

        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">Back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/index</item>
            </item>

            <item name="save" xsi:type="string">Magebit\Faq\Ui\Component\Form\Button\SaveButton</item>


<!--            <item name="save" xsi:type="array">-->
<!--                <item name="name" xsi:type="string">save</item>-->
<!--                <item name="label" xsi:type="string" translate="true">Save</item>-->
<!--                <item name="class" xsi:type="string">primary</item>-->
<!--                <item name="url" xsi:type="string">*/*/save</item>-->
<!--                <item name="save" xsi:type="array">-->

<!--                </item>-->
<!--            </item>-->

<!--            -->

<!--            <item name="save" xsi:type="string">Magebit\Faq\Block\Adminhtml\Question\Edit\SaveButton</item>-->


<!--            <item name="save2" xsi:type="string">Magento\Cms\Block\Adminhtml\Page\Edit\SaveButton</item>-->
<!--            <item name="back2" xsi:type="string">Magento\Cms\Block\Adminhtml\Page\Edit\SaveButton</item>-->
<!--            <item name="delete" xsi:type="string">Magento\Cms\Block\Adminhtml\Page\Edit\DeleteButton</item>-->
<!--            <item name="reset" xsi:type="string">Magento\Cms\Block\Adminhtml\Page\Edit\BackButton</item>-->
        </item>
    </argument>

    <dataSource name="magebit_faq_item_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magebit\Faq\Model\Question\DataProvider</argument>
            <argument name="name" xsi:type="string">magebit_faq_item_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>

            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>

        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="general_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">General Information</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>

        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="label" xsi:type="string" translate="true">Enable Question</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="valuesForOptions" xsi:type="array">
                        <item name="boolean" xsi:type="string">boolean</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="dataScope" xsi:type="string">status</item>
                </item>
            </argument>
        </field>

        <field name="question" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <label translate="true">Question</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="answer" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <label translate="true">Answer</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
